<div id="<%= dom_id subscriber %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Email:</strong>
    <%= subscriber.email %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this subscriber", subscriber, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this subscriber', edit_subscriber_path(subscriber), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
